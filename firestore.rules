rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Check if user has the specified uid
    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Check if user is signed in
    function isSignedIn() {
      return request.auth.uid != null;
    }

    match /alphaUsers/{uid} {
      allow read: if false;
      allow write: if isUser(uid);

      match /{id}/signUps {
        allow read: if false;
        allow write: if isUser(uid);
      }
    }

    match /counter {

      match /public {

        match /shards/{shard_num} {
          allow read: if true;
          allow write: if true;
        }

        match /info {
          allow read, write: if false;
        }
      }

      match /private/shards/{shard_num} {
        allow read: if false;
        allow write: if true;
      }
    }

  }
}
